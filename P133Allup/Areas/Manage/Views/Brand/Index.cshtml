@model PageNatedList<Brand>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}
<div class="row">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Brands Page</h1>
    </div>
    <div class="col-lg-2">
       <a class="btn btn-primary" asp-action="create" asp-controller="brand" asp-area="manage"> Create</a>
    </div>
</div>
<div class=" row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Name</th>
                    <th>Created At</th>
                    <th>Created By</th>
                    <th>Product Count</th>
                    <th>Settings</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Brand brand in Model)
                {
                    count++;

                    <tr>
                        <td>@count</td>
                        <td>@brand.Name</td>
                        <td>@brand.CreatedAt?.ToString("dd-MMM-yyyy")</td>
                        <td>@brand.CreatedBy</td>
                        <td>@brand.Products?.Count()</td>
                        <td>
                            <a asp-area="manage" asp-controller="brand" asp-action="detail" asp-route-id="@brand.Id" class="btn btn-primary">Detail</a>
                            <a asp-area="manage" asp-controller="brand" asp-action="Update" asp-route-id="@brand.Id" class="btn btn-warning">Update</a>
                            <a asp-area="manage" asp-controller="brand" asp-action="Delete" asp-route-id="@brand.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-12">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @if (Model.PageIndex > 1)
                {
                    <li class="page-item"><a class="page-link" 
                        asp-controller="brand" asp-action="index" asp-area="manage" asp-route-pageIndex="@(Model.PageIndex-1)">Previous</a></li>
                }

                @for (int i = Model.StartPage; i <= Model.EndPage; i++)
                {
                    <li class="page-item @(Model.PageIndex == i ? "active":"")">
                        <a class="page-link"
                       asp-controller="brand" asp-action="index" asp-area="manage" asp-route-pageIndex="@i">@i</a></li>
                }

                @if (Model.PageIndex < Model.TotalPage)
                {
                    <li class="page-item"><a class="page-link"
                       asp-controller="brand" asp-action="index" asp-area="manage" asp-route-pageIndex="@(Model.PageIndex+1)">Next</a></li>
                }
            </ul>
        </nav>
    </div>
</div>